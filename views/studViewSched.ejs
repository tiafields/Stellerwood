<%- include('partials/header'); -%>

<%- include('partials/navForStudents'); -%>

<div class="container">
    <!-- creating a class for the form to hold the content -->
    <div class="formBackground">

        <div class="form-containter">

            <h1>View Schedule</h1>

            <!-- Add a section to display the list of courses -->
            <div class="course-list">
                <h2>Available Courses</h2>
                <ul>
                    <% courses.forEach(course => { %>
                    <li>
                        Course ID: <%= course.createCourseID %><br>
                        Course Name: <%= course.createCourseName %><br>
                        Description: <%= course.createCourseDescription %><br>
                        Subject Area: <%= course.createSubjectArea %><br>
                        Credit Hours: <%= course.createNumOfCreditHours %><br>
                        <!-- Add the button to add the course to the schedule here -->
                        <button onclick="addToSchedule('<%= course._id %>')">Add to Schedule</button>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>

