<!-- studWelcom.ejs -->

<%- include('partials/header'); -%>

<%- include('partials/navForStudents'); -%>

<div class="container">
    <!-- creating a class for the form to hold the content -->
    <div class="formBackground">

        <div class="form-containter">

            <h1>Student Add Course  </h1>

            <% if (courses.length > 0) { %> 
                <% courses.forEach(course => { %>
                   <!-- getting the individual id of each course, surrounding with an anchor tag and getting id of course-->
                   <a class="stud-course" href="/courses/<%= course._id %>">
                   <h3 class="course-name"><%= course.teachCourseName %></h3>
                   <p class="course-description"><%= course.teachCourseDescription %></p>
                   

                   
                    </a>    <br>
                <% }) %> 
               <% } else { %>
   
                   <p>There are no courses to display...</p>
               
               <% } %> 

           
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>
